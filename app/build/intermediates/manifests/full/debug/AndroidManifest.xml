<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fi.bel.httpservicemonitor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="21" />

    <!-- GLES2 is used as proxy for hardware floating point on CPU! -->
    <uses-feature android:glEsVersion="0x00020000" />
    <uses-feature android:name="android.software.live_wallpaper" />

    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <service
            android:name="fi.bel.android.mandelbox.service.MandelboxWallpaperService"
            android:label="@string/app_name"
            android:permission="android.permission.BIND_WALLPAPER" >
            <intent-filter>
                <action android:name="android.service.wallpaper.WallpaperService" />
            </intent-filter>

            <meta-data
                android:name="android.service.wallpaper"
                android:resource="@xml/wallpaper" >
            </meta-data>
        </service>
        <service android:name="fi.bel.android.mandelbox.service.ViewUpdateService" >
        </service>

        <activity
            android:name="fi.bel.android.mandelbox.activity.SettingsActivity"
            android:exported="true"
            android:permission="android.permission.BIND_WALLPAPER" >
        </activity>
    </application>

</manifest>